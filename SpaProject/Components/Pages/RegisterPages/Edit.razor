@page "/registers/edit"
@using Microsoft.EntityFrameworkCore
@using SpaProject.Models
@inject IDbContextFactory<SpaProject.Data.SpaProjectRegisterDB> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Register</h2>
<hr />
@if (Register is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Register" OnValidSubmit="UpdateRegister" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Register.Id" value="@Register.Id" />
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="email" class="form-label">Email:</label>
                    <InputText id="email" @bind-Value="Register.Email" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Register.Email" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="password" class="form-label">Password:</label>
                    <InputText id="password" @bind-Value="Register.Password" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Register.Password" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="isadmin" class="form-label">IsAdmin:</label>
                    <InputCheckbox id="isadmin" @bind-Value="Register.IsAdmin" class="form-check-input" />
                    <ValidationMessage For="() => Register.IsAdmin" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/registers">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Register? Register { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Register ??= await context.Register.FirstOrDefaultAsync(m => m.Id == Id);

        if (Register is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateRegister()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Register!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RegisterExists(Register!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/registers");
    }

    private bool RegisterExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Register.Any(e => e.Id == id);
    }
}
