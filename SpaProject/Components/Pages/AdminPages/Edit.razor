@page "/admins/edit"
@using Microsoft.EntityFrameworkCore
@using SpaProject.Models
@inject IDbContextFactory<SpaProject.Data.SpaProjectAdminDB> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Admin</h2>
<hr />
@if (Admin is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Admin" OnValidSubmit="UpdateAdmin" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Admin.Id" value="@Admin.Id" />
                <div class="mb-3">
                    <label for="bookingtime" class="form-label">BookingTime:</label>
                    <InputDate id="bookingtime" @bind-Value="Admin.BookingTime" class="form-control" />
                    <ValidationMessage For="() => Admin.BookingTime" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="notes" class="form-label">Notes:</label>
                    <InputText id="notes" @bind-Value="Admin.Notes" class="form-control" />
                    <ValidationMessage For="() => Admin.Notes" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/admins">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Admin? Admin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Admin ??= await context.Admin.FirstOrDefaultAsync(m => m.Id == Id);

        if (Admin is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateAdmin()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Admin!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!AdminExists(Admin!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/admins");
    }

    private bool AdminExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Admin.Any(e => e.Id == id);
    }
}
