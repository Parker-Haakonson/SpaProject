@page "/mains/delete"
@using Microsoft.EntityFrameworkCore
@using SpaProject.Models
@inject IDbContextFactory<SpaProject.Data.SpaProjectContextMainDB> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Main</h2>
    <hr />
    @if (main is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Message</dt>
            <dd class="col-sm-10">@main.Message</dd>
        </dl>
        <EditForm method="post" Model="main" OnValidSubmit="DeleteMain" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(main is null)">Delete</button> |
            <a href="/mains">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Main? main;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        main = await context.Main.FirstOrDefaultAsync(m => m.Id == Id);

        if (main is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMain()
    {
        using var context = DbFactory.CreateDbContext();
        context.Main.Remove(main!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/mains");
    }
}
